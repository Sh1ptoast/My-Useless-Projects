#include <iostream>
using namespace std;

int main() {
    int c = 0;
    cout << "How many back-and-forths do you want?" << endl;
    cout << "Number of back-and-forths: ";
    cin >> c;
    cout << endl << endl;
    for (int y = 0; y < c; y++) {
        for ( int i = 0; i < 10; i++) {
            for ( int x = i; x >0; x--) {
                cout << " ";
            }
        cout << "bounce" << endl;
        }
        for ( int i = 8; i > 0; i--) {
            for ( int x = i; x >0; x--) {
                cout << " ";
            }
        cout << "bounce" << endl;
        }
    }
}
